{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@common": [
        "./src/common"
      ],
      "@components": [
        "./src/components"
      ],
      "@config": [
        "./src/config"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@layouts": [
        "./src/layouts"
      ],
      "@lib": [
        "./src/lib"
      ],
      "@styles": [
        "./src/styles"
      ],
      "@themes": [
        "./src/themes"
      ],
      "@utils": [
        "./src/utils"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
